{% extends 'layout.html.twig' %}

{% block title %}Car{% endblock %}
{% block page_breadcrumb %}{{ parent() }} <span> / car detail</span>{% endblock %}
{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ car.name }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ car.model }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ car.color }}</td>
            </tr>
            <tr>
                <th>Carburant</th>
                <td>{{ car.carburant }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td><b>{{ car.marque.name }}</b></td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ car.createdAt ? car.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ car.updatedAt ? car.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="btn-group-operations form-group">
        <a href="{{ path('car_index') }}" class="btn btn-default">back to list</a>

        <a href="{{ path('car_edit', {'id': car.id}) }}" class="btn btn-warning">edit</a>

        {{ include('car/_delete_form.html.twig') }}
    </div>
{% endblock %}
